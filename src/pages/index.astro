---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../layouts/Link.astro";
import LangTable from "../layouts/LangTable.astro";
import DontClick from "../layouts/DontClick.astro";

const links = [
    [
        "Unofficial Curriculum Vitae",
        "https://sichanghe.github.io/curriculum_vitae/",
    ],
    ["GitHub", "https://github.com/SichangHe"],
    ["YouTube channel", "https://www.youtube.com/@sichanghe"],
    ["Blog", "https://sichanghe.wordpress.com"],
    ["Notes", "https://sichanghe.github.io/notes"],
];
---

<BaseLayout>
    <div
        style="display: flex; flex-direction: row; justify-items: space-between;"
    >
        <div>
            <h1>Steven Hé (Sīchàng)</h1>
            <p>
                Systems programmer, invested Rustacean, Pythonista, Polyglot
                programmer.
            </p>
        </div>
        <img
            height="180"
            alt="Steven Hé (Sīchàng)'s avatar"
            src="https://sichanghe.github.io/notes/favicon.svg"
        />
    </div>
    <LangTable />
    <p>
        <h2>Link farm</h2>
        <ul>
            {
                links.map(([name, href]) => (
                    <li>
                        <Link href={href}>Steven Hé (Sīchàng)'s {name}</Link>
                    </li>
                ))
            }
        </ul>
    </p>
    <div style="display: flex; justify-content: center;">
        <DontClick />
    </div>
</BaseLayout>
